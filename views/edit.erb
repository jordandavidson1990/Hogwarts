<form method="post" action="/students/<%=@student.id%>/edit">
<label for="first-name">First Name:</label>
 <input id="first-name" type="text" name="first_name" value= "<%=@student.first_name%>"/>

 <label for="last-name">Last Name:</label>
<input id="last-name" type="text" name="last_name" value="<%= @student.last_name %>"></input>

 <label for="house-select">Select a House:</label>
 <select id="house-select" name="house_id">
   <% for house in @houses%>
   <option value="<%=house.id%>"
     <%="selected" if @student.house.name == house.name%> >
     <%=house.name%>
   </option>
   <%end%>
 </select>

 <label for="age">Age:</label>
 <input id="age" type="number" name="age"
 min="10" value= "<%=@student.age%>"/>

 <input type="submit" value="Save Changes"/>
</form>
